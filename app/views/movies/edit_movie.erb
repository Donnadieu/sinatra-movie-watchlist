<div class="movie-container">

<div class="header">
   <div class="logo">
     <p><a href="/movies">A-List</a></p>
   </div>
   <div class="logout">
     <p><a href="/logout">Logout</a></p>
   </div>
</div>

<div class="movie-sidebar">
<h1>Edit <%= @movie.title %></h1>
</div>


<div class="movie-content">


<form method="post" action="/movies/<%=@movie.slug%>">
  <input id="hidden" type="hidden" name="_method" value="patch"></input>

  <p class="flash_message">
    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>
  </p>

  <p>
    * Required field
  </p>
  <p>
    <label for="title">Title:* </label>
  </p><p>
    <input type="text" id="title" name="title" value="<%= @movie.title %>" required  />
  </p>

  <p>
    <label for="notes">Notes: </label>
    </p><p>
    <textarea id="notes" name="notes" rows="10" cols="30"><%= @movie.notes %></textarea>
  </p>

  <p>
    <label for="genre">Genre:* </label>
    </p><p>
      <select  id="genre" name="genre" required>
          <option value="Action" <%=selected="selected" if @movie.genre == "Action" %>>Action</option>
          <option value="Adventure" <%=selected="selected" if @movie.genre == "Adventure" %>> Adventure</option>
          <option value="Comedy" <%=selected="selected" if @movie.genre == "Comedy" %>> Comedy</option>
          <option value="Documentary" <%=selected="selected" if @movie.genre == "Documentary" %>> Documentary</option>
          <option value="Drama" <%=selected="selected" if @movie.genre == "Drama" %>> Drama</option>
          <option value="Horror" <%=selected="selected" if @movie.genre == "Horror" %>> Horror</option>
          <option value="Musical" <%=selected="selected" if @movie.genre == "Musical" %>> Musical</option>
          <option value="Romantic Comedy" <%=selected="selected" if @movie.genre == "Romantic Comedy" %>> Romantic Comedy</option>
          <option value="Suspense" <%=selected="selected" if @movie.genre == "Suspense" %>> Suspense</option>
        </select>
